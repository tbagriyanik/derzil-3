<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootBG"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaplanTrans"
    android:baselineAligned="false">


    <LinearLayout
        android:id="@+id/widgetBG"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="2dp">

        <Button
            android:id="@+id/ayarbutton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/ic_launcher_round"
            android:textAlignment="viewStart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextClock
                android:id="@+id/appwidget_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:format24Hour="d MMMM EEEE, HH:mm:ss"
                android:padding="1dp"
                android:paddingTop="-10dp"
                android:shadowColor="#00FA0000"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/teneffustextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed"
                android:padding="2dp"
                android:text="@string/zilYok"
                android:textAlignment="center"
                android:textColor="@color/beyaz"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>